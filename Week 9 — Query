-- Step 1
SELECT CONCAT(FIRST_NAME + SPACE(1) + LAST_NAME) AS 'Full Name'
FROM employees;

-- Step 2
SELECT PHONE_NUMBER
FROM employees
REPLACE(str, find_string, replace_with);

-- Step 3
SELECT EMAIL
FROM employees;

-- Step 4
SELECT PHONE_NUMBER
FROM employees;

-- Step 5

-- Step 6
SELECT job_id , COUNT(*)
FROM employees
GROUP BY job_id;

-- Step 7

-- Step 8

-- Step 9
START TRANSACTION;
SELECT *
FROM employees
WHERE DEPARTMENT_ID=90;
SELECT AVG(SALARY)
FROM employees
WHERE DEPARTMENT_ID=90;
COMMIT;

-- Step 10
START TRANSACTION;
-- Finding highest salary
SELECT MAX(SALARY) AS 'Highest Salary'
FROM employees;
-- Finding lowest salary
SELECT MIN(SALARY) AS 'Lowest Salary'
FROM employees;
-- Finding average salary
SELECT AVG(SALARY)
FROM employees;
GROUP BY DEPARTMENT_ID;
COMMIT;
