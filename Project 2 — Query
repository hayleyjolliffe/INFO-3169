-- Project 2
-- Uses NORTHWIND

-- STEP 1
-- Expected return: 8 rows
SELECT CategoryID, COUNT(*)
FROM Products
GROUP BY CategoryID DESC;

-- STEP 2
-- Expected return: 70 rows
SELECT City, COUNT(*)
FROM Customers
GROUP BY City ASC;

-- STEP 3
-- Expected return: 18 rows
SELECT * IF(UnitsInStock > ReorderLevel)
FROM Products
ORDER BY ProductID ASC;

-- STEP 4
-- Expected return: 2 rows
SELECT * IF(SUM(UnitsInStock + UnitsOnOrder) <= ReorderLevel AND Discontinued=0)
FROM Products
ORDER BY ProductID ASC;

-- STEP 5
-- Expected return: 93 rows
SELECT *
FROM Customers
WHERE Region IS NOT NULL
GROUP BY Region ASC
AND
ORDER BY CustomerID ASC;

-- STEP 6
-- Expected return: 4 rows
SELECT CompanyName, CustomerID
FROM Orders.C1
WHERE CustomerID NOT IN (SELECT CustomerID
    FROM Orders.C2)
ORDER BY CustomerID ASC;

-- STEP 7
-- Expected return: 18 rows

