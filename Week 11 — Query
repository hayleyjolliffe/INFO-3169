-- Step 1
DROP VIEW IF EXISTS step1;

CREATE VIEW step1 AS
SELECT FIRST_NAME, LAST_NAME
FROM employees
WHERE DEPARTMENT_ID = (SELECT DEPARTMENT_ID
                        FROM departments
                        WHERE DEPARTMENT_NAME = 'Finance'
                        OR DEPARTMENT_NAME = 'Sales');

